<div data-section-id="{{ section.id }}" data-section-type="section-product-v2" style="{% if section.settings.margin_top != blank %}margin-top: {{section.settings.margin_top}}px;{%endif%} {% if section.settings.margin_bottom != blank %}margin-bottom: {{section.settings.margin_bottom}}px;{% endif %}">
  <div class="section-product-v2 mt-all">
    <div class="container container-v2">
      <div class="row align-items-center justify-content-around">
        <div class="col-lg-3 col-md-4">
          <div class="box-info">            
            <div class="content-banner">
              {% if section.settings.title_1 != blank %}
              <h3 class="title_heading" style="color : {{section.settings.color_title}}">{{section.settings.title_1}}</h3>
              {% endif %}
              
              {% if section.settings.description != blank %}
              <p class="description mb-0" style="color : {{section.settings.color_description}}">{{section.settings.description}}</p>
              {% endif %}
              
              <div class="info-bottom"> 
                {% if section.settings.button_1 != blank %}
                <a href="{{section.settings.url_button1}}" class="button-all-site" style="color :{{section.settings.color_btn}}">
                  {{section.settings.button_1}}
                
                  <span class="btnborder btnborder-top-left"></span>
                  <span class="btnborder btnborder-top-right"></span>
                  <span class="btnborder btnborder-right"></span>
                  <span class="btnborder btnborder-bottom-right"></span>
                  <span class="btnborder btnborder-bottom-left"></span>
                  <span class="btnborder btnborder-left"></span>
                
                </a>
                {% endif %}
              </div>
            </div> 
          </div>
        </div>
        <div class="col-lg-4 col-md-4 text-center">
          <div class="box-img">
            {% if section.settings.img_banner1 != blank %}
            <a href="{{section.settings.url_banner1}}"> <img src="{{section.settings.img_banner1 | img_url:'master'}}" class="img-fluid"></a>
            {% else %}
            <a href="{{section.settings.url_banner1}}"> <img src="//placehold.it/555x750" class="img-fluid" alt=""></a>
            {% endif %}
          </div>
        </div>
        <div class="col-lg-3 col-md-4 mt-product-responsive">
            <div class="row js_product_v2">   
              {% assign products_limit = section.settings.products_limit %}
              {% assign col = section.settings.select_collection %}
              {% for product in collections[col].products limit: products_limit %}
              <div class="col-12 product_item">
                {% include 'product-item-v1' %}
              </div>
              {% else %}
              {% for i in (1..section.settings.products_limit) %}
              <div class="col-lg-4 col-6 product_item">
                {% include 'empty-product-item' %}
              </div>
              {% endfor %}
              {% endfor %}
            </div>
        </div>
      </div>
    </div>
  </div>
</div>
<style>
  .button-all-site .btnborder{
    background-color:{{section.settings.color_btn}};
  }
  .button-all-site:hover{
  	color:{{section.settings.color_btn_hover}};
  }
  .button-all-site:hover .btnborder{
  	background-color:{{section.settings.color_btn_hover}};
  }

</style>

