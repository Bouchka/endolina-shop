<div data-section-id="{{ section.id }}" data-section-type="section-banner-v3" style="{% if section.settings.margin_top != blank %}margin-top: {{section.settings.margin_top}}px;{%endif%} {% if section.settings.margin_bottom != blank %}margin-bottom: {{section.settings.margin_bottom}}px;{% endif %}">
  <div class="section-banner-v3 mt-all">
    <div class="collection-v1">
      {% for block in section.blocks %}
      {% if block.type == "collection" %}
      <div class="item">
        <div class="collection-inner">
          <div class="thumb">
            <a href="{{block.settings.collection_url}}" class="images">
              {% if block.settings.collection_img == blank %}
              <img src="//placehold.it/480x480" alt="Image">
              {% else %}
              <img src="{{block.settings.collection_img|img_url:'master'}}" class="img-responsive" alt="Image">
              {% endif %}
            </a>
          </div>

          <a href="{{block.settings.collection_url}}">
            <div class="box-content">
              <div class="content-info">
                <div class="box-text">
                  {% if block.settings.title != blank %}
                  <h3 class="title_heading mb-0" style="color : {{block.settings.color_block_title}}">{{block.settings.title}}</h3>
                  {% endif %}

                  {% if block.settings.title != blank %}
                  <p class="description_banner mb-0" style="color : {{block.settings.color_description}}">{{block.settings.description}}</p>
                  {% endif %}

                </div>
              </div>

            </div>
          </a>

        </div>
      </div>
      {% endif %}
      {% endfor %}
    </div>
  </div>
</div>
<style>
  {% if section.blocks.size > 0 %}
  {% for block in section.blocks %}
  {% if block.type == "collection" %}
  .section-banner-v3 .collection-v1 .box-content h3 a:hover{
    color : {{block.settings.color_block_title_hover}} !important;
  }
  {% endif %}
  {% endfor %}
  {% endif %}
</style>

