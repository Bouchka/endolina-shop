<div data-section-id="{{ section.id }}" data-section-type="section-slideshow-v2" style="{% if section.settings.margin_top != blank %}margin-top: {{section.settings.margin_top}}px;{%endif%} {% if section.settings.margin_bottom != blank %}margin-bottom: {{section.settings.margin_bottom}}px;{% endif %} {% if section.settings.sections_layout == "dark" %}background: {{section.settings.sections_bg_color}};{% endif %}">
  <div class="section-slideshow-v2">
    <div class="js-slideshowv2 slick-slide-h2">
      {% if section.blocks.size > 0 %}
      {% for block in section.blocks %}
      {% if block.type == "slideshow" %}
      <div class="items-slide-h2">    
        <div class="items-slide__left">
          <a href="{{block.settings.slide_left_url}}" class="d-block">
            {% if block.settings.slide_left != blank %}
            <img src="{{block.settings.slide_left | img_url:'master' }}" class="img-fluid w-100">
            {% else %}
            <img src="//placehold.it/960x900" class="img-fluid w-100">
            {% endif %}
          </a>
        </div>
        <div class="items-slide__right">
          <a href="{{block.settings.slide_right_url}}" class="d-block">
            {% if block.settings.slide_right != blank %}
            <img src="{{block.settings.slide_right | img_url:'master' }}" class="img-fluid w-100">
            {% else %}
            <img src="//placehold.it/960x900" class="img-fluid w-100">
            {% endif %}
          </a>
        </div>
        <div class="head-caption">
          {% if block.settings.color_heading != blank %}
          <h1 class="heading-slide" style="color:{{block.settings.color_caption}}">
            {{ block.settings.color_heading }}
          </h1>
          {% endif %}
          {% if block.settings.block_btn_name != blank %}
          <div class="box-button">
            <a href="{{block.settings.block_btn_url}}" class="button-shopnow btn-sv2-{{section.id}}-{{block.id}}">
              <span>{{ block.settings.block_btn_name }}</span>
            </a>
          </div>
          {% endif %}
        </div>
      </div>
      {% endif %}
      {% endfor %}
      {% endif %}
    </div>
  </div>
</div>
<style>
  {% for block in section.blocks %}
  {% if block.type == "slideshow" %}
  .section-slideshow-v2 .slick-slide-h2 .box-button  .btn-sv2-{{section.id}}-{{block.id}} {
  	background-color: {{block.settings.bg_block_button}};
  }
  .section-slideshow-v2 .slick-slide-h2  .box-button .btn-sv2-{{section.id}}-{{block.id}}:hover {
  	background-color: {{block.settings.bg_block_button_hover}};
  }
  {% endif %}
  {% endfor %}
</style>
