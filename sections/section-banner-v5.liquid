              {% endif %}
            </div>
            <div class="content-banner">
              {% if section.settings.title_2 != blank %}
              <a href="{{section.settings.url_button2}}">
                <h3 class="title mb-0" style="color : {{section.settings.color_title2}}">{{section.settings.title_2}}</h3>
              </a>
              {% endif %}
             
              {% if section.settings.button_2 != blank %}
              <a href="{{section.settings.url_button2}}" class="button-shop button-shop2" style="color : {{section.settings.color_text_button_2}}">{{section.settings.button_2}}</a>
              {% endif %}
            </div>
          </div>
        </div>
        
        <div class="col-lg-4 col-md-4 mb-3 mb-md-0 ">
          <div class="box-info">
            <div class="box-img5">
              {% if section.settings.img_banner3 != blank %}
