<div data-section-id="{{ section.id }}" data-section-type="section-banner-v5" style="{% if section.settings.margin_top != blank %}margin-top: {{section.settings.margin_top}}px;{%endif%} {% if section.settings.margin_bottom != blank %}margin-bottom: {{section.settings.margin_bottom}}px;{% endif %}">
  <div class="section-banner-v5 mt-all">
    <div class="container container-v1">
      <div class="row">   
        <div class="col-lg-4 col-md-4 mb-3 mb-md-0 ">
          <div class="box-info">
            <div class="box-img5">
              {% if section.settings.img_banner1 != blank %}
              <a href="{{section.settings.url_button1}}"><img src="{{section.settings.img_banner1 | img_url:'master'}}" class="img-fluid"></a>
              {% else %}
                <a href="{{section.settings.url_button1}}"><img src="//placehold.it/550x700" class="w-100 img-fluid" alt=""></a>
              {% endif %}
            </div>
            <div class="content-banner">
              
              {% if section.settings.title_1 != blank %}
              <a href="{{section.settings.url_button1}}">
                <h3 class="title mb-0" style="color : {{section.settings.color_title1}}">{{section.settings.title_1}}</h3>
              </a>
              {% endif %}
              
              {% if section.settings.button_1 != blank %}
              <a href="{{section.settings.url_button1}}" class="button-shop button-shop1" style="color : {{section.settings.color_text_button_1}} ">{{section.settings.button_1}}</a>
              {% endif %}
            </div>
          </div>
        </div>
        
        <div class="col-lg-4 col-md-4 mb-3 mb-md-0 ">
          <div class="box-info">
            <div class="box-img5">
              {% if section.settings.img_banner2 != blank %}
              <a href="{{section.settings.url_button2}}"><img src="{{section.settings.img_banner2 | img_url:'master'}}" class="img-fluid"></a>
              {% else %}
