<div data-section-id="{{ section.id }}" data-section-type="section-banner-v1" style="{% if section.settings.margin_top != blank %}margin-top: {{section.settings.margin_top}}px;{%endif%} {% if section.settings.margin_bottom != blank %}margin-bottom: {{section.settings.margin_bottom}}px;{% endif %}">
  <div class="section-banner-v1 mt-all">
    <div class="container container-v2">
      <div class="row">        
        <div class="col-lg-6 col-md-6 col-12 col-sm-12 mb-3 mb-md-0">
          <div class="box-info">
            <div class="box-img-one box-img">
              {% if section.settings.img_banner1 != blank %}
              <a href="{{section.settings.url_banner1}}"><img data-src="{{section.settings.img_banner1 | img_url:'master'}}" class="lazyload img-fluid w-100"></a>
              {% else %}
                <a href="{{section.settings.url_banner1}}"><img src="//placehold.it/720x420" class="img-fluid w-100" alt=""></a>
              {% endif %}
            </div>
            
            <div class="content-banner">
              {% if section.settings.title_1 != blank %}
              <h3 class="title mb-0">{{section.settings.title_1}}</h3>
              {% endif %}

              <div class="list-inline info-bottom"> 
                {% if section.settings.button_1 != blank %}
                <a href="{{section.settings.url_button1}}" class="button-shop one list-inline-item mr-0" >{{section.settings.button_1}}</a>
                {% endif %}

              </div>
            </div>
            
          </div>
        </div>
        
        <div class="col-lg-6 col-md-6 col-12 col-sm-12">
          <div class="box-info">
            <div class="box-img-one box-img">
              {% if section.settings.img_banner2 != blank %}
              <a href="{{section.settings.url_banner2}}"><img data-src="{{section.settings.img_banner2 | img_url:'master'}}" class="lazyload img-fluid w-100"></a>
              {% else %}
                <a href="{{section.settings.url_banner1}}"><img src="//placehold.it/720x420" class="img-fluid w-100" alt=""></a>
              {% endif %}
            </div>
            
            <div class="content-banner">
              {% if section.settings.title_2 != blank %}
              <h3 class="title mb-0">{{section.settings.title_2}}</h3>
              {% endif %}

              <div class="list-inline info-bottom"> 
                {% if section.settings.button_2 != blank %}
                <a href="{{section.settings.url_button2}}" class="button-shop two list-inline-item mr-0" >{{section.settings.button_2}}</a>
                {% endif %}
              </div>
            </div>
            
          </div>
        </div>
        
      </div>
    </div>
  </div>
</div>

