<div data-section-id="{{ section.id }}" data-section-type="section-newsletter-v1" style="{% if section.settings.margin_top != blank %}margin-top: {{section.settings.margin_top}}px;{%endif%} {% if section.settings.margin_bottom != blank %}margin-bottom: {{section.settings.margin_bottom}}px;{% endif %}">
  {% if settings.newsletter_form_action != blank %}
  {% assign form_action = settings.newsletter_form_action %}
  {% else %}
  {% assign form_action = '#' %}
  {% endif %}

  <div class="{% if section.settings.select_width == 'full' %} {% else %} container container-v1 {% endif %} ">


    {% if section.settings.select_style == 'style_1' %}
    <div class="section-newsletter-v1 mt-all{% if section.settings.enable-pd-small %}pd-small{% endif %}" style="background-image : url({% if section.settings.bg_newsletters != blank %} {{section.settings.bg_newsletters |img_url : 'master'}} {% else %} //placehold.it/1920x400 {% endif %})  ">
      <div class="container container-v1 ">
        <div class="row align-items-center"> 
          <div class="col-md-6 text-center">
            {% if section.settings.title_newletter != blank %}
            <div class="title_newletter">
              <h3 class="title_heading mb-0" style="color: {{section.settings.color_title}}">{{section.settings.title_newletter}}</h3>
            </div>
            {% endif %}

            {% if section.settings.content_newletter != blank %}
            <p class="mb-0 content"  style="color: {{section.settings.color_content}}">{{section.settings.content_newletter}}</p>
            {% endif %}      
          </div>

          <div class="col-md-6">
            <div class="newletter_email">          
              <form class="needs-validation form-inline" action="{{form_action}}" method="post">
                <div class="form-group">                           
                  <input type="email" name="EMAIL" class="form-control" placeholder="{{ 'general.newsletter_form.newsletter_email' | t }}" required >                 
                </div>
                <button class="btn" type="submit"><svg xmlns="http://www.w3.org/2000/svg" enable-background="new 0 0 24 24" height="512" viewBox="0 0 24 24" width="512"><path d="m8.75 17.612v4.638c0 .324.208.611.516.713.077.025.156.037.234.037.234 0 .46-.11.604-.306l2.713-3.692z"/><path d="m23.685.139c-.23-.163-.532-.185-.782-.054l-22.5 11.75c-.266.139-.423.423-.401.722.023.3.222.556.505.653l6.255 2.138 13.321-11.39-10.308 12.419 10.483 3.583c.078.026.16.04.242.04.136 0 .271-.037.39-.109.19-.116.319-.311.352-.53l2.75-18.5c.041-.28-.077-.558-.307-.722z"/></svg></button>
              </form>
            </div> 
          </div>
        </div>
      </div>
    </div>
    {% elsif section.settings.select_style == 'style_2' %}
    <div class="section-newsletter-v1 mt-all  {% if section.settings.enable-pd-small %}pd-small{% endif %}" style="background-image : url({% if section.settings.bg_newsletters != blank %} {{section.settings.bg_newsletters |img_url : 'master'}} {% else %} //placehold.it/1920x400 {% endif %})  ">
      <div class="text-center"> 
        {% if section.settings.title_newletter != blank %}
        <div class="title_newletter">
          <h3 class="title_heading mb-0" style="color: {{section.settings.color_title}}">{{section.settings.title_newletter}}</h3>
        </div>
        {% endif %}

        {% if section.settings.content_newletter != blank %}
        <p class="mb-3 content"  style="color: {{section.settings.color_content}}">{{section.settings.content_newletter}}</p>
        {% endif %}      

        <div class="newletter_email">          
          <form class="needs-validation form-inline" action="{{form_action}}" method="post">
            <div class="form-group">                           
              <input type="email" name="EMAIL" class="form-control" placeholder="{{ 'general.newsletter_form.newsletter_email' | t }}" required >                 
            </div>
            <button class="btn" type="submit"><svg xmlns="http://www.w3.org/2000/svg" enable-background="new 0 0 24 24" height="512" viewBox="0 0 24 24" width="512"><path d="m8.75 17.612v4.638c0 .324.208.611.516.713.077.025.156.037.234.037.234 0 .46-.11.604-.306l2.713-3.692z"/><path d="m23.685.139c-.23-.163-.532-.185-.782-.054l-22.5 11.75c-.266.139-.423.423-.401.722.023.3.222.556.505.653l6.255 2.138 13.321-11.39-10.308 12.419 10.483 3.583c.078.026.16.04.242.04.136 0 .271-.037.39-.109.19-.116.319-.311.352-.53l2.75-18.5c.041-.28-.077-.558-.307-.722z"/></svg></button>
          </form>
        </div> 

      </div>
    </div>
    {% elsif section.settings.select_style == 'style_3' %}
    <div class="section-newsletter-v1 section-newsletter-v1-2 style_3 mt-all">
      <div class="container container-v2">
        <div class="row align-items-center justify-content-center"> 
          <div class="col-lg-5 col-md-6">
            <div class="img-banner images">
              {% if section.settings.img_banner != blank %}
              <a href="{{section.settings.url_banner}}"><img src="{{section.settings.img_banner | img_url:'master'}}" class="img-fluid"></a>
              {% else %}
              <a href="{{section.settings.url_banner}}"><img src="//placehold.it/500x500" class="img-fluid" alt=""></a>
              {% endif %}
            </div> 
          </div>

          <div class="col-lg-5 col-md-6">
            <div class="box-padding-style3" style="background: {{section.settings.bg-color-newletter}}">
              <div class="text-center box-style3" style="border:1px solid {{section.settings.border-color-newletter}};" > 
                {% if section.settings.title_newletter != blank %}

                <h3 class="title_heading mb-0" style="color: {{section.settings.color_title}}">{{section.settings.title_newletter}}</h3>

                {% endif %}

                {% if section.settings.content_newletter != blank %}
                <p class="mb-3 content"  style="color: {{section.settings.color_content}}">{{section.settings.content_newletter}}</p>
                {% endif %}      

                <div class="newletter_email">          
                  <form class="needs-validation form-inline" action="{{form_action}}" method="post">
                    <div class="form-group">                           
                      <input type="email" name="EMAIL" class="form-control" placeholder="{{ 'general.newsletter_form.newsletter_email' | t }}" required >                 
                    </div>
                    <button class="btn" type="submit"><svg xmlns="http://www.w3.org/2000/svg" enable-background="new 0 0 24 24" height="512" viewBox="0 0 24 24" width="512"><path d="m8.75 17.612v4.638c0 .324.208.611.516.713.077.025.156.037.234.037.234 0 .46-.11.604-.306l2.713-3.692z"/><path d="m23.685.139c-.23-.163-.532-.185-.782-.054l-22.5 11.75c-.266.139-.423.423-.401.722.023.3.222.556.505.653l6.255 2.138 13.321-11.39-10.308 12.419 10.483 3.583c.078.026.16.04.242.04.136 0 .271-.037.39-.109.19-.116.319-.311.352-.53l2.75-18.5c.041-.28-.077-.558-.307-.722z"/></svg></button>
                  </form>
                </div> 

              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    {% elsif section.settings.select_style == 'style_4' %}
    <div class="section-newsletter-v1 paddingstyle4 mt-all  {% if section.settings.enable-pd-small %}pd-small{% endif %}" style="background-image : url({% if section.settings.bg_newsletters != blank %} {{section.settings.bg_newsletters |img_url : 'master'}} {% else %} //placehold.it/1920x560 {% endif %})  ">
      <div class="container">
        <div class="row justify-content-end">
          <div class="col-lg-6 col-md-8 style-4">
            <div class="box-padding-style4" style="background: {{section.settings.bg-color-newletter}};border:3px solid {{section.settings.border-color-newletter}} ">
              <div class="text-left box-style4" > 
                {% if section.settings.title_newletter != blank %}

                <h3 class="title_heading text-left mb-0" style="color: {{section.settings.color_title}}">{{section.settings.title_newletter}}</h3>

                {% endif %}

                {% if section.settings.content_newletter != blank %}
                <p class="mb-3 content text-left"  style="color: {{section.settings.color_content}}">{{section.settings.content_newletter}}</p>
                {% endif %}      

                <div class="newletter_email">          
                  <form class="needs-validation form-inline" action="{{form_action}}" method="post">
                    <div class="form-group">                           
                      <input type="email" name="EMAIL" class="form-control" placeholder="{{ 'general.newsletter_form.newsletter_email' | t }}" required >                 
                    </div>
                    <button class="btn" type="submit">{{ 'general.newsletter_form.submit' | t }}</button>
                  </form>
                </div> 

              </div>
            </div>
          </div>

        </div>
      </div>
    </div>
    {% endif %}
  </div>
</div>

<style>
  .section-newsletter-v1 .newletter_email form .form-group .form-control{
    background-color:{{section.settings.bg-color-inputnewletter}};
  }
</style>


{% schema %}
{
  "name": "Newsletter v1",
  "settings": [
	{
      "type": "select",
      "id": "select_style",
      "label": "Select Style",
	  "options": [
        {
          "value": "style_1",
          "label": "Style 1"
        },
        {
          "value": "style_2",
          "label": "Style 2"
        },
		{
          "value": "style_3",
          "label": "Style 3"
        },
		{
          "value": "style_4",
          "label": "Style 4"
        }
      ],
      "default": "style_1"
    },

	{
      "type": "select",
      "id": "select_width",
      "label": "Select width",
	  "options": [
        {
          "value": "full",
          "label": "Width Full"
        },
        {
          "value": "container",
          "label": "Width Container"
        }
      ],
      "default": "full"
    },

    {
      "type": "image_picker",
      "id": "bg_newsletters",
      "label": "Background Image Section only style 1 and 2 and 4"
    },
	{
      "type": "image_picker",
      "id": "img_banner",
      "label": "Image only style 3",
	 "info": "500 x 500px recommended"
    },
	{
      "type": "color",
      "id": "bg-color-newletter",
      "label": "Background Color Newletter Only style 3 and style 4"
    },
	{
      "type": "color",
      "id": "bg-color-inputnewletter",
      "label": "Background Color input Newletter Only style 3 and style 4"
    },
	{
      "type": "color",
      "id": "border-color-newletter",
      "label": "border Color Newletter Only style 3 and style 4",
	  "default": "#ffffff"
    },
	{
      "type": "url",
      "id": "url_banner",
      "label": "URL Image only style 3",
      "default": "/collections/all"
    },
    {
      "type": "textarea",
      "id": "title_newletter",
      "label": "Title Newletter",
      "default": "Subscribe our newsletter and get<br>discount 30% off"
    },
	{
      "type": "color",
      "id": "color_title",
      "label": "Color Title"
    },

	{
      "type": "textarea",
      "id": "content_newletter",
      "label": "Content Newletter",
      "default": "When looking for a new bouquet idea for Valentines or Mother's Day, ask us for a tip!"
    },
	{
      "type": "color",
      "id": "color_content",
      "label": "Color Content"
    },
    {
      "type": "header",
      "content": "Section Space"
    },
    {
      "type": "text",
      "id": "margin_top",
      "label": "Margin Top",
      "info": "Defined in pixels. Do not add the 'px' unit."
    },
    {
      "type": "text",
      "id": "margin_bottom",
      "label": "Margin Bottom",
      "info": "Defined in pixels. Do not add the 'px' unit."
    }
  ],
  "presets": [
    {
      "name": "Newsletter v1",
      "category": "HOME PAGE"
    }
  ]
}
{% endschema %}

