
<div class="widget widget-tags">
  <div class="widget-title">
    <h2 class=" mb-0 ">{{settings.shop_by_tag_title}}</h2>
  </div>
  
  <ul class="list-none wg-list-tags list-tag">
    {% for tag in collection.all_tags %}
    <li>{{ tag | link_to_tag: tag }} {% if section.settings.filter_layout == 'filter_collapse' %}{% unless forloop.last %} / {% endunless %}{% endif %}</li>
    {% endfor %}
  </ul>
</div>
  